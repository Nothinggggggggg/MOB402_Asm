<div class="row">
    <table class="table table-striped table-borderless table-hover  table-response shadow">
        {{!-- Head --}}
        <thead>
            <tr>
                <th>#</th>

                <th>View</th>

                <th>Name</th>
                <th>Price</th>
                <th>Image</th>

                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        {{!-- Body --}}

        <tbody>
            {{#each productsPage}}
            <tr>
                <th class="align-middle">{{increase @index}}</th>

                <td class="align-middle"><a class="btn" href="/products/detail/{{this._id}}"><i
                            class="fa-regular fa-eye"></i></a></td>

                <td class="align-middle">{{shortText this.name 20}}</td>
                <td class="align-middle">{{this.price}}</td>
                <td class="align-middle">
                    <img src={{this.img}} width="48px" height="48px" alt="" class="rounded">
                </td>

                <td class="align-middle"><a class="btn" href="/products/update/{{this._id}}"><i
                            class="fa-regular fa-pen-to-square"></i></a></td>
                <td class="align-middle"><button class="btn" type="button" class="btn btn-primary"
                        data-bs-toggle="modal" data-bs-target="#modal_{{this._id}}"><i
                            class="fa-regular fa-trash-can"></i></button> </td>
            </tr>
            <!-- The Modal -->
            <div class="modal" id="modal_{{this._id}}">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title">Delete Product</h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <!-- Modal body -->
                        <div class="modal-body">
                            {{this.name}} - {{this.price}}
                        </div>
                        <!-- Modal footer -->
                        <div class="modal-footer col-auto">
                            <a type="button" class="btn btn-danger" href="/products/delete/{{this._id}}">Yes</a>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </tbody>

    </table>


</div>